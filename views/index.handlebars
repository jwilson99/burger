<div class="jumbotron text-center">
    <h1>Eat the Burgers!</h1>
</div>


<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
    <div class="card card-default" id="burgersToEat">
        <div class="card-header"><h2>Eat these burgers!</h2></div>
        <div class="list-group">

            <h4>
                {{#each burgers}}
                    {{#unless devoured}}
                        <div class="list-group-item">
                            {{> burgers/burger-block devoured=true}}</div>
                    {{/unless}}
                {{/each}}
            </h4>
        </div>
    </div>
</div>

<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
    <div class="card card-default" id="burgersEaten">
        <div class="card-header"><h2>These were yummy!</h2></div>
        <div class="list-group">

            <h4>
                {{#each burgers}}
                    {{#if devoured}}
                        <div class="list-group-item">
                            {{> burgers/burger-block devoured=false}}</div>
                    {{/if}}
                {{/each}}
            </h4>
        </div>
    </div>
</div>



<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12" id="addBurger">
    <h2>Add a Burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="burger">Burger Name:</label>
            <input type="text" id="burger" name="name">
        </div>

        <button type="submit">Add Burger</button>
    </form>
</div>

